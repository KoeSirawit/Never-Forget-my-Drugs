<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rokokoe.dontforgetmydrugs.ListMunu">

    <Button
        android:text="ประวัติการทานยา"
        android:layout_width="500dp"
        android:id="@+id/historyBtn"
        android:textSize="30sp"
        android:textAllCaps="false"
        android:background="@android:color/holo_green_dark"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="57dp" />

    <Button
        android:text="เพิ่มรายการยา"
        android:id="@+id/addListBtn"
        android:layout_width="500dp"
        android:textSize="30sp"
        android:layout_height="60dp"
        android:background="@android:color/holo_green_dark"
        android:layout_above="@+id/historyBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="36dp" />

    <Button
        android:text="รายการทานยา"
        android:id="@+id/listBtn"
        android:layout_width="500dp"
        android:textSize="30sp"
        android:layout_height="60dp"
        android:background="@android:color/holo_green_dark"
        android:layout_alignBottom="@+id/addListBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="99dp" />

    <Button
        android:text="ใส่ข้อมูลผู้ใช้"
        android:layout_width="500dp"
        android:layout_above="@+id/listBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp"
        android:id="@+id/infoBtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="30sp"
        android:layout_height="80dp"
        android:lineSpacingExtra="8sp"
        android:textAlignment="center"
        android:elevation="0dp"
        android:background="@android:color/holo_blue_light" />

</RelativeLayout>
